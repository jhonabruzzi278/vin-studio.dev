---
import Layout from "@/layouts/Layout.astro";
import ContactForm from "@/components/forms/ContactForm";
import LabelDemo from "@/components/ui/LabelDemo";
---

<Layout 
  title="Contacto - Hablemos de tu Proyecto" 
  description="Conversemos sobre tu proyecto web sin compromisos. Respuesta en 48 horas. Email: jonathan.guerra@vin-studio.dev | WhatsApp: +56 9 3898 0598. Servicios 100% online."
  keywords="contacto vin studio, cotización desarrollo web, presupuesto página web, consultoría tecnológica chile, contratar desarrollador web"
>
  <!-- Hero Section -->
  <section class="border-b border-zinc-200 bg-white py-12 sm:py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center space-y-4 sm:space-y-6">
        <div class="inline-flex items-center gap-3 mb-4 sm:mb-6">
          <div class="w-8 sm:w-12 h-px bg-zinc-900"></div>
          <span class="text-xs sm:text-sm font-semibold tracking-wider uppercase text-zinc-900">Contacto</span>
          <div class="w-8 sm:w-12 h-px bg-zinc-900"></div>
        </div>
        
        <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold text-zinc-900 tracking-tight leading-tight">
          Conversemos
        </h1>
        
        <p class="text-lg sm:text-xl text-zinc-500 leading-relaxed max-w-2xl mx-auto">
          Sin compromisos. Solo una conversación clara sobre posibilidades reales.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 sm:py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 sm:gap-16">
          <!-- Formulario -->
          <div>
            <ContactForm client:load />
          </div>

          <!-- Información de contacto -->
          <div class="space-y-8 sm:space-y-12">
            <!-- Contact Methods -->
            <div>
              <h2 class="text-xl sm:text-2xl font-bold text-zinc-900 mb-6 sm:mb-8 tracking-tight">
                Información de Contacto
              </h2>
              <div class="space-y-6 sm:space-y-8">
                <!-- Email -->
                <div class="group">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 border border-zinc-200 flex items-center justify-center shrink-0 group-hover:border-zinc-900 transition-colors">
                      <svg class="w-5 h-5 text-zinc-900" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                      </svg>
                    </div>
                    <div class="w-full">
                      <h3 class="font-semibold text-zinc-900 mb-2 text-sm uppercase tracking-wider">Email</h3>
                      <button 
                        onclick="navigator.clipboard.writeText('jonathan.guerra@vin-studio.dev').then(() => { this.querySelector('.email-text').textContent = '✓ Email copiado al portapapeles'; setTimeout(() => this.querySelector('.email-text').textContent = 'jonathan.guerra@vin-studio.dev', 3000); })"
                        class="text-zinc-500 hover:text-zinc-900 transition-colors block break-all cursor-pointer text-left w-full"
                      >
                        <span class="email-text">jonathan.guerra@vin-studio.dev</span>
                      </button>
                      <p class="mt-2 text-xs text-zinc-400">
                        Click para copiar al portapapeles
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Phone / WhatsApp -->
                <div class="group">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 border border-zinc-200 flex items-center justify-center shrink-0 group-hover:border-zinc-900 transition-colors">
                      <svg class="w-5 h-5 text-zinc-900" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-zinc-900 mb-2 text-sm uppercase tracking-wider">WhatsApp</h3>
                      <a href="https://wa.me/56938980598?text=Hola%20VIN%20Studio%2C%20estoy%20interesado%20en%20sus%20servicios%20de%20desarrollo%20web.%20Me%20gustar%C3%ADa%20conversar%20sobre%20mi%20proyecto." target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-zinc-900 transition-colors">
                        +56 9 3898 0598
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Online Services -->
                <div class="group">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 border border-zinc-200 flex items-center justify-center shrink-0 group-hover:border-zinc-900 transition-colors">
                      <svg class="w-5 h-5 text-zinc-900" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-zinc-900 mb-2 text-sm uppercase tracking-wider">Modalidad</h3>
                      <p class="text-zinc-500">100% Online</p>
                      <p class="text-zinc-500 text-xs mt-1">Trabajamos con clientes de todo el mundo</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
